---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
}

const { href, className, ariaLabel, title, disabled = false } = Astro.props;
---

<a
  href={disabled ? "#" : href}
  tabindex={disabled ? "-1" : "0"}
  class={`group inline-block ${className}`}
  aria-label={ariaLabel}
  title={title}
  aria-disabled={disabled}
>
  <slot />
</a>

<style>
  a {
    /* @apply hover:text-skin-accent; */
    @apply hover:underline hover:underline-offset-4 hover:decoration-dashed active:font-bold active:decoration-solid;
  }

  a svg {
    @apply hover:underline hover:underline-offset-4 hover:decoration-dashed active:font-bold active:decoration-solid;
  }
</style>
